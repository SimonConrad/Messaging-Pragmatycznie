{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "App": {
    "AppName" : "tickets-service"
  },
  "Deduplication": {
    "Enabled": true
  },
  "Observability" : {
    "Enabled": false,
    "Endpoint" : "http://localhost:4317"
  },
  "Outbox": {
    "Enabled": true,
    "PublishOnCommit" : true,
    "IntervalMilliseconds" : 3000,
    "BatchSize": 1
  },
  "Postgres": {
    "ConnectionString": "Host=localhost;Database=TicketFlow.Tickets;Username=postgres;Password="
  },
  "rabbitMq": {
    "hostName": "localhost",
    "port": 5672,
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "createTopology": true
  },
  "Metrics": {
    "Enabled": false
  },
  "Resiliency": {
    "Consumer": {
      "BrokerRetriesEnabled": true,
      "BrokerRetriesLimit": 0,
      "ConsumerRetriesEnabled": false,
      "UseDeadletter": false,
      "PublishFaultOnFailure": false,
      "MaxMessagesFetchedPerConsumer": 10
    },
    "Producer": {
      "PublisherConfirmsEnabled":  false,
      "PublishMandatoryEnabled": false
    }
  }
}
